<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".Fragment.ReviewFragment">

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFB854"
        android:backgroundTint="#FFB854"
        app:layout_constraintBottom_toBottomOf="@+id/horizontalScrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/category_review_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_review"
            android:layout_width="wrap_content"
            android:layout_height="624dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFB854"
            android:clickable="true"
            android:src="@drawable/add_review_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_list_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:fadeScrollbars="false"
        android:scrollbarSize="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/category_all"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="@color/colorAccent"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/all_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="전체"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/all"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/all" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_sight"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="@color/colorAccent"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/sight_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="시각"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/sight"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/eye" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_hearing"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/hear_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="청각"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/hear"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/hearing" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_touch"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/touch_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="촉각"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/touch"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/hand" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_imagine"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/imagine_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="상상력"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/imagine"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/head" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_exercise"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/exercise_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="7dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="운동기관"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/exercise"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/health" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_head"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/head_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="지능"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/head"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/head" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_focus"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/focus_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="집중력"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/focus"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/touch" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_language"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/lang_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="언어"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/lang"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/language" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category_elseth"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:background="#FFFFFF"
                android:backgroundTint="@color/colorAccent"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/elseth_text"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/notosans_bold"
                    android:gravity="start|center_horizontal|center_vertical"
                    android:text="기타"
                    android:textAlignment="center"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/elseth"
                    android:layout_width="38dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/elseth" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Review"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>